<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Contour lumineux extérieur -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp" />
            <stroke
                android:width="4dp"
                android:color="#CCCCCC" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    
    <!-- Fond principal avec effet enfoncé -->
    <item android:bottom="3dp" android:top="3dp" android:left="3dp" android:right="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <!-- Fond plus foncé pour effet enfoncé -->
            <gradient
                android:startColor="#88000000"
                android:centerColor="#CC3333"
                android:endColor="#CC3333"
                android:angle="270" />
        </shape>
    </item>
    
</layer-list>