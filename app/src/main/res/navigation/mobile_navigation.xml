<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">



    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.vibing.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.vibing.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.vibing.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_teams"
        android:name="com.example.vibing.ui.teams.TeamsFragment"
        android:label="@string/title_teams"
        tools:layout="@layout/fragment_teams" />

    <fragment
        android:id="@+id/poiScoreFragment"
        android:name="com.example.vibing.ui.score.PoiScoreFragment"
        android:label="Score POI"
        tools:layout="@layout/fragment_poi_score" >
        
        <argument
            android:name="poiName"
            app:argType="string" />
        <argument
            android:name="poiLatitude"
            app:argType="float" />
        <argument
            android:name="poiLongitude"
            app:argType="float" />
        <argument
            android:name="poiScore"
            app:argType="integer" />
        <argument
            android:name="poiOwningTeam"
            app:argType="integer" />
    </fragment>

    <action
        android:id="@+id/action_homeFragment_to_poiScoreFragment"
        app:destination="@id/poiScoreFragment" />

</navigation>